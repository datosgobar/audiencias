<div id="header-shadow">
  <div id="header-container">
    <div id="header-content">
      <% var currentUser = window.audiencias.globals.users.currentUser(); %>
      <% if (currentUser)  { %>
        <div id="main-logo">
          <a href="/">
            <img src="/assets/logo-ministerio.svg" id="logo-ministerio">
          </a>  
        </div>
        <div id="user-header">
          <% var name = currentUser.get('name'); %>
          <% var surname = currentUser.get('surname'); %>
          <% var role = currentUser.get('role') %>
          <span class="user-icon <%= role %>"><%= name[0] + surname[0] %></span> 
          <span id="user-header-name"><%= name %> <%= surname %></span>
          <img src="/assets/icon-flecha-abajo-usuario.svg" id="user-header-icon">
        </div>
      <% } else { %>
        <div class="both-logos">
          <a href="/">
            <img src="/assets/logo-ministerio.svg" id="logo-ministerio">
          </a>
          <img src="/assets/logo-subsecretaria.svg" id="logo-subsecretaria">
        </div>
      <% } %>
    </div>
  </div>  
</div>

<div id="user-menu-container">
  <div id="user-menu">
    <div class="user-menu-action" id="profile">
      Perfil
    </div>
    <div class="user-menu-action" id="settings">
      Configuración
    </div>
    <div class="user-menu-action" id="help">
      Ayuda
    </div>
    <div class="user-menu-action" id="logout">
      Cerrar sesión
    </div>
  </div>
</div>