<% var user = audiencias.globals.users.currentUser() %>

<div id="user-config-container">
  <div id="user-config-content">
    <div class="title">Cuenta</div>
    <div class="subtitle">Cambie sus configuraciones básicas de cuenta</div>
    
    <div class="config-section">
      <div class="left-column">
        <div class="section-title grey">
          <img src="/assets/icon-marcador-derecha-gris.svg">
          Usuario
        </div>
      </div>
      <div class="right-column">
        <div class="user-card">
          <% var name = user.get('name') %>
          <span class="user-icon obligee">
            <%= audiencias.helpers.initials(name) %>
          </span>
          <div class="user-name">
            <%= name %>
          </div>
          <div class="user-id">
            <%= user.get('id_type').toUpperCase() %> <%= user.get('person_id') %>
          </div>
        </div>
      </div>
    </div>

    <div class="config-section">
      <div class="left-column">
        <div class="section-title">
          <img src="/assets/icon-marcador-derecha.svg">
          Correo electrónico
        </div>
        <div class="section-subtitle">
          Cambie su correo electrónico actual.
        </div>
      </div>
      <div class="right-column">
        <label for="current-email">Correo electrónico actual</label>
        <input type="text" disabled id="current-email" value="<%= user.get('email') %>">
        <label for="new-email">Nuevo correo electrónico</label>
        <input type="text" id="new-email" placeholder="mail@unmail.com">
      </div>
    </div>

    <div class="config-section">
      <div class="left-column">
        <div class="section-title">
          <img src="/assets/icon-marcador-derecha.svg">
          Contraseña
        </div>
        <div class="section-subtitle">
          Cambie o recupere su contraseña actual.
        </div>
      </div>
      <div class="right-column">
        <!--
          <label for="current-password">Contraseña actual</label>
          <input type="password" id="current-password" placeholder="Introduzca su contraseña">
        -->
        <label for="new-password">Nueva contraseña</label>
        <input type="password" id="new-password" placeholder="Introduzca su nueva contraseña" autocomplete="off">
        <label for="confirm-new-password">Confirmar contraseña</label>
        <input type="password" id="confirm-new-password" placeholder="Confirme su nueva contraseña" autocomplete="off">
      </div>
    </div>
    <% if (updated) { %>
      <div class="successfull-update">Sus datos se han actualizado</div>
    <% } %>
    <button id="save-user-config">GUARDAR CAMBIOS</button>
  </div>
</div>