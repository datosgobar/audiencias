<div id="login-position-origin">

  <div id="login-background">
    <div id="login-title">
      <h1>Registro Único de Audiencias de Gestión de Intereses del Poder Ejecutivo Nacional</h1>
    </div>
  </div>

  <div id="login-card">
    <label for="id">Tipo y nro de documento</label>
    <div class="type-and-doc">
      <select id="id-type">
        <option value="dni">DNI</option>
        <option value="lc">LC</option>
        <option value="le">LE</option>
      </select>
      <input type="text" id="id" placeholder="Introduzca su nro de documento" autofocus>
    </div>

    <label for="password">Contraseña</label>
    <input type="password" id="password" placeholder="Introduzca su contraseña">

    <div id="remember-me-container">
      <input type="checkbox" id="remember-me">
      <label for="remember-me">Recordarme</label>
    </div>

    <div id="submit-container">
      <button type="primary" id="submit">INGRESAR</button>
    </div>

    <div id="message"></div>

    <div id="forgot-password">
      <a href="/resetear_credenciales">Olvidé mi contraseña</a>
    </div>
  </div>

</div>