<div id="audience-editor-container">
  
  <div id="audience-editor-navigation">
    <div id="go-back">
      <a href="/intranet/audiencias/<%= audiencias.globals.currentObligee %>">
        VOLVER
      </a>
    </div>

    <div id="steps-container">
      <div id="audience-editor-steps">
        <div class="step">
          SUJETO OBLIGADO
        </div>
        <div class="step">
          SOLICITANTE
        </div>
        <div class="step <%= currentStep == 'participants' ? 'incomplete' : '' %>">
          AUDIENCIA
        </div>
        <div class="step <%= currentStep == 'participants' ? 'inactive' : currentStep == 'audience' ? 'incomplete' : '' %>">
          PREVISUALIZACIÃ“N
        </div>
      </div>
    </div>
  </div>

  <div id="obligee-and-applicant" class="">
    <div class="left-column">
      Sujeto obligado
    </div>
    <div class="right-column">
      <div class="participant-card">
        <span class="user-icon obligee">
          <%= obligee.get('person').name[0] %><%= obligee.get('person').surname[0] %>
        </span>
        <div class="participant-name">
          <%= obligee.get('person').name %> <%= obligee.get('person').surname %>
        </div>
        <div class="participant-position">
          <%= obligee.get('position') %>
        </div>
        <div class="participant-id">
          <%= obligee.get('person').id_type.toUpperCase() %> <%= obligee.get('person').person_id %>
        </div>
        <div class="participant-email">
          <%= obligee.get('person').email %>
        </div>
      </div>
    </div>
  </div>

  <div id="audience-editor-actions">
    <button id="previous-step">VOLVER</button>
    <button id="back-to-list">DEJAR EN PROCESO</button>
    <button id="next-step" class="<%= currentStep != 'participants' ? 'hidden' : '' %>">SIGUIENTE</button>
    <button id="preview-audience" class="<%= currentStep != 'audience' ? 'hidden' : '' %>">PREVISUALIZAR</button>
    <button id="publish-audience" class="<%= currentStep != 'preview' ? 'hidden' : '' %>">PUBLICAR</button>
  </div>
</div>
