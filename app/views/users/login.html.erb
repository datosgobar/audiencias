
<div class="login-container">

  <h1>Registro Único de Audiencias de Gestión de Intereses del Poder Ejecutivo Nacional</h1>

  <div class="login-card">
    <%= form_tag login_url do %>
      <%= label_tag(:dni, 'DNI') %>
      <%= text_field_tag(:dni) %>
      
      <%= label_tag(:password, 'Contraseña') %>
      <%= password_field_tag(:password) %>
      
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag :remember_me, 'Recordarme' %>
      
      <%= submit_tag('INGRESAR') %>
      

    <% end %>  
  </div>

  <p><%= link_to "Olvidé mi contraseña", send_password_reset_form_path %></p>
</div>